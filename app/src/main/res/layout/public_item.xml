<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="可提取pdf文件的view"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        >

      <com.like.LikeButton
          android:id="@+id/collect"
          android:layout_width="23dp"
          android:layout_height="23dp"
          android:layout_centerVertical="true"
          android:layout_marginTop="20dp"
          app:anim_scale_factor="2"
          app:circle_end_color="#de5050"
          app:circle_start_color="#fa4242"
          app:dots_primary_color="#fa4242"
          app:dots_secondary_color="#ef5353"
          app:icon_size="23dp"
          app:icon_type="heart"
          app:like_drawable="@drawable/icon_collect_yes"
          app:unlike_drawable="@drawable/icon_collect_no"
          />

      <TextView
          android:id="@+id/time_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:layout_toRightOf="@id/collect"
          android:text="2016-8-9"
          android:textColor="@android:color/darker_gray"
          android:textSize="16dp"
          />

      <TextView
          android:id="@+id/who_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="30dp"
          android:text="代码家"
          android:textColor="@android:color/darker_gray"
          android:textSize="16dp"
          />
    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="#efefef"/>-->

  </LinearLayout>
</android.support.v7.widget.CardView>